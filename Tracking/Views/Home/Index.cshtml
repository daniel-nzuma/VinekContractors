@{
    ViewBag.Title = "Home Page";
}

<link href="@Url.Content("~/Content/page_styles/index.css")"
      rel="stylesheet" type="text/css" />



<!-- Carousel -->
<div id="main-slide" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators visible-lg visible-md">
        <li data-target="#main-slide" data-slide-to="0" class="active"></li>
        <li data-target="#main-slide" data-slide-to="1"></li>
        <li data-target="#main-slide" data-slide-to="2"></li>
    </ol>
    <!--/ Indicators end-->
    <!-- Carousel inner -->
    <div class="carousel-inner">

        <div class="item active banner_slide_tracking">
            <div class="slider-content text-right">
                <div class="col-md-12">
                    <h3 class="slide-sub-title animated5">Car Tracking Solutions</h3>
                    <h2 class="slide-title animated4">You are covered</h2>

                    <p>
                        <a href="services.html" class="slider btn btn-primary">Request quote</a>
                    </p>
                </div>
            </div>
        </div>
        <!--/ Carousel item 1 end -->

        <div class="item banner_slide_cctv">
            <div class="slider-content text-left">
                <div class="col-md-12">
                    <h3 class="slide-sub-title animated3">CCTV Systems</h3>
                    <h3 class="slide-title animated3">You are covered</h3>

                    <p class="animated3">
                        <a href="services.html" class="slider btn btn-primary">Request quote</a>
                    </p>
                </div>
            </div>
        </div>
        <!--/ Carousel item 2 end -->

        <div class="item banner_slide_intercomm">
            <div class="slider-content text-right">
                <div class="col-md-12">
                    <h3 class="slide-sub-title animated7">Intercomm Systems</h3>
                    <p class="slider-description lead animated7">
                        <a href="services.html" class="slider btn btn-primary">Request quote</a>
                    </p>
                </div>
            </div>
        </div>
        <!--/ Carousel item 3 end -->

    </div><!-- Carousel inner end-->
    <!-- Controllers -->
    <a class="left carousel-control" href="#main-slide" data-slide="prev">
        <span><i class="fa fa-angle-left"></i></span>
    </a>
    <a class="right carousel-control" href="#main-slide" data-slide="next">
        <span><i class="fa fa-angle-right"></i></span>
    </a>
</div>
<!--/ Carousel end -->

<section class="call-to-action-box no-padding">
    <div class="container">
        <div class="action-style-box">
            <div class="row">
                <div class="col-md-10">
                    <div class="call-to-action-text">
                        <h3 class="action-title">We understand your security needs</h3>
                    </div>
                </div><!-- Col end -->
                <div class="col-md-2">
                    <div class="call-to-action-btn">
                        <span class="btn btn-dark">@Html.ActionLink("Request Quote", "AboutUs", "Home")</span>
                    </div>
                </div><!-- col end -->
            </div><!-- row end -->
        </div><!-- Action style box -->
    </div><!-- Container end -->
</section>
<!-- Action end -->

