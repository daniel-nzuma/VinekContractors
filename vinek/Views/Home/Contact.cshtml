@{
    ViewBag.Title = "Contact";
}

<div id="banner-area" class="banner-area" style="background-image:url(../images/banner/contactus.jpg)">
    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">Contact</h1>
                        <ol class="breadcrumb">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ol>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div><!-- Banner text end -->
</div><!-- Banner area end -->


<section id="main-container" class="main-container">
    <div class="container">

        <div class="row text-center">
            <h2 class="section-title">Reaching our Office</h2>
            <h3 class="section-sub-title">Find Our Location</h3>
        </div><!--/ Title row end -->

        <div class="row">
            <div class="col-md-4">
                <div class="ts-service-box-bg text-center">
                    <a href="tel:+254720550993">
                        <span class="ts-service-icon icon-round">
                            <i class="fa fa-phone-square"></i>
                        </span>
                        <div class="ts-service-box-content">
                            <h4>Call Us</h4>
                            <p> +254720550993</p>
                        </div>
                    </a>
                </div>
            </div><!-- Col 1 end -->

            <div class="col-md-4">
                <div class="ts-service-box-bg text-center">
                    <a href="mailto:support@vinekcontractors.com" target="_blank">
                        <span class="ts-service-icon icon-round">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <div class="ts-service-box-content">
                            <h4>Email Us</h4>
                            <p>support@vinekcontractors.com</p>
                        </div>
                    </a>
                </div>
            </div><!-- Col 2 end -->

            <div class="col-md-4">
                <div class="ts-service-box-bg text-center">
                    <a href="https://wa.me/+254720550993" target="_blank">
                        <span class="ts-service-icon icon-round">
                            <i class="fa fa-whatsapp" aria-hidden="true"></i>
                        </span>
                        <div class="ts-service-box-content">
                            <h4>WhatsApp Us</h4>
                            <p> +254720550993</p>
                        </div>
                    </a>
                </div>
            </div><!-- Col 3 end -->

        </div><!-- 1st row end -->

        <div class="gap-60"></div>


        <iframe id="map" class="map" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src="http://maps.google.com/maps?q=0.01667,37.07283&z=16&output=embed" " style="filter: scale(100) contrast(1.2) opacity(0.4);"></iframe>
        <div class="gap-40"></div>

        <div class="row">

            <div class="col-md-12">

                <h3 class="column-title">FOR Quote request,complains or suggestions</h3>

                <form class="contact_us_form" role="form">
                    <div class="error-container"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control form-control-name" name="name" id="name" placeholder="" type="text" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control form-control-email" name="email" id="email"
                                       placeholder="" type="email" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Subject</label>
                                <input class="form-control form-control-subject" name="subject" id="subject"
                                       placeholder="" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control form-control-message" name="message" id="message" placeholder="" rows="10" required></textarea>
                    </div>
                    <div class="text-left">
                        <br>
                        <div class="statusTxt"></div>
                    </div>
                    <div class="text-right">
                        <br>
                        <button class="btn btn-primary solid blank" type="submit">Send Message</button>
                    </div>
                </form>
            </div>

        </div><!-- Content row -->
    </div><!-- Conatiner end -->
</section><!-- Main container end -->


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/page_scripts/Contact.js"></script>

